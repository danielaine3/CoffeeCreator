<h1>Coffee Creator!</h1>
<h2> Create a coffee... Then drink It!</h2>
<img src="/assets/img/coffee.png">

<form class="add-coffee">
	<div class= "form-group">

		<input type="text" id="co" name="name">
	</div>
	<button type="submit" id="submit"><i class="fas fa-coffee"></i> Add coffee!</button>
</form>

<div class="ready">
	<h3 id="readytitle">Coffee ready to drink!</h3>
	<ul>
		{{#each coffee}}
			{{#unless drank}}
				{{> coffee/coffee-block drank=true}}
			{{/unless}}
		{{/each}}
	</ul>
</div>
<div class="gone">
	<h3 id="gonetitle">Coffee that's already gone.</h3>
	<ul>
		{{#each coffee}}
			{{#if drank}}
				{{> coffee/coffee-block drank=false}}
			{{/if}}
		{{/each}} 
	</ul>
</div>
